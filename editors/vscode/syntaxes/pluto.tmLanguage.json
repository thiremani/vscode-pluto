{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pluto",
	"scopeName": "source.pluto.common",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#string"
		},
		{
			"include": "#float"
		},
		{
			"include": "#integer"
		},
		{
			"include": "#keyword"
		},
		{
			"include": "#operator"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line.number-sign.pluto",
					"match": "#.*$"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"name": "string.quoted.double.pluto",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.pluto"
						}
					},
					"end": "(\")(\\.)?",
					"endCaptures": {
						"1": {
							"name": "punctuation.definition.string.end.pluto"
						},
						"2": {
							"name": "punctuation.terminator.heap-string.pluto"
						}
					},
					"patterns": [
						{
							"name": "constant.character.escape.pluto",
							"match": "\\\\[nt\"\\\\]"
						},
						{
							"name": "meta.interpolation.format.pluto",
							"match": "(-[\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)(%(?:\\((?:-)?([\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)\\))?[-+#0 ]*(?:(\\d+)|\\((?:-)?([\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)\\))?(?:\\.(?:(\\d+)|\\((?:-)?([\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)\\)))?[a-zA-Z%])",
							"captures": {
								"1": {
									"name": "variable.other.interpolation.pluto"
								},
								"2": {
									"name": "constant.other.format-spec.pluto"
								},
								"3": {
									"name": "variable.other.interpolation.pluto"
								},
								"5": {
									"name": "variable.other.interpolation.pluto"
								},
								"7": {
									"name": "variable.other.interpolation.pluto"
								}
							}
						},
						{
							"name": "variable.other.interpolation.pluto",
							"match": "-[\\p{L}_][\\p{L}\\p{N}_\\p{M}]*"
						}
					]
				}
			]
		},
		"float": {
			"patterns": [
				{
					"name": "constant.numeric.float.pluto",
					"match": "(?<![\\p{L}\\p{N}_])(?:\\d+\\.\\d*|\\.\\d+)(?![\\p{N}_])"
				}
			]
		},
		"integer": {
			"patterns": [
				{
					"name": "constant.numeric.integer.pluto",
					"match": "(?<![\\p{L}\\p{N}_])\\d+(?![\\p{N}_]|\\.)"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"name": "keyword.operator.logical.pluto",
					"match": "\\bor\\b"
				},
				{
					"name": "keyword.control.flow.pluto",
					"match": "\\breturn\\b"
				}
			]
		},
		"operator": {
			"patterns": [
				{
					"name": "keyword.operator.pluto",
					"match": "==|!=|<=|>=|>>>|<<|>>|[=,:()\\[\\]{}]|[+\\-*/%^&|~<>]|[√∛∜⋅÷⊕⊻?@$\\\\]"
				}
			]
		}
	}
}
