{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pluto Template",
	"scopeName": "source.pluto.template",
	"patterns": [
		{
			"include": "source.pluto.common"
		},
		{
			"include": "#top-level-constant"
		},
		{
			"include": "#function-call"
		},
		{
			"include": "#identifier"
		}
	],
	"repository": {
		"top-level-constant": {
			"patterns": [
				{
					"name": "meta.constant.definition.pluto",
					"match": "^([\\p{L}_][\\p{L}\\p{N}_\\p{M}]*(?:\\s*,\\s*[\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)*)(\\s*=)(?!\\s*[\\p{L}_][\\p{L}\\p{N}_\\p{M}]*\\s*\\()",
					"captures": {
						"1": {
							"name": "entity.name.constant.pluto"
						},
						"2": {
							"name": "keyword.operator.assignment.pluto"
						}
					}
				}
			]
		},
		"function-call": {
			"patterns": [
				{
					"name": "meta.function-call.pluto",
					"match": "\\b([\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)\\s*(?=\\()",
					"captures": {
						"1": {
							"name": "entity.name.function.pluto"
						}
					}
				}
			]
		},
		"identifier": {
			"patterns": [
				{
					"name": "variable.other.readwrite.pluto",
					"match": "(?<![\\p{L}_])[\\p{L}_][\\p{L}\\p{N}_\\p{M}]*(?![\\p{L}\\p{N}_])"
				}
			]
		}
	}
}
