{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pluto Script",
	"scopeName": "source.pluto.script",
	"patterns": [
		{
			"include": "source.pluto.common"
		},
		{
			"include": "#function-call"
		},
		{
			"include": "#identifier"
		}
	],
	"repository": {
		"function-call": {
			"patterns": [
					{
						"name": "meta.function-call.pluto",
						"match": "\\b([\\p{L}_][\\p{L}\\p{N}_\\p{M}]*)\\s*(?=\\()",
							"captures": {
								"1": {
									"name": "entity.name.function.pluto"
								}
							}
						}
				]
			},
		"identifier": {
			"patterns": [
				{
					"name": "variable.other.readwrite.pluto",
					"match": "(?<![\\p{L}_])[\\p{L}_][\\p{L}\\p{N}_\\p{M}]*(?![\\p{L}\\p{N}_])"
				}
			]
		}
	}
}
